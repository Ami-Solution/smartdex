	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",  // Attach Requires chrome to be launched with 
			"request": "attach",  // external debugging enabled first
			"name": "Attach to Chrome",
			"port": 9222,
      "url": "http://localhost:4200/",
			"webRoot": "${workspaceFolder}",
			"sourceMaps": false
		},
		{
			"name": "Launch localhost",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:4200",
			"webRoot": "${workspaceFolder}/wwwroot"
	},
	]
}